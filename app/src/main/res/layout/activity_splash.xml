<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kristoffer.breastcancerawareness.SplashActivity"
    android:background="@drawable/app_wp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        android:src="@drawable/banner_pink"
        android:layout_alignTop="@+id/title1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/ribbon"
        android:src="@drawable/ribbon_pink"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---OCTOBER---"
        android:id="@+id/title1"
        android:textSize="@dimen/text_large"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breast Cancer\nAwareness Month"
        android:id="@+id/title2"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/banner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Developed by Kristofferson Reyes"
        android:id="@+id/footer1"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/footer2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Copyright Â© 2015"
        android:id="@+id/footer2"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:text="Be informed!"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/banner"
        android:id="@+id/phrase"
        android:layout_marginTop="-20dp"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>
